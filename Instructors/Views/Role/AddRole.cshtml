@model AddRoleViewModel

@{
    ViewData["Title"] = "Add New Role";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-4 fw-bold text-primary">Create Account</h3>

                    <form asp-action="SaveRole" asp-asp-controller="Role" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
                            <label asp-for="RoleName"></label>
                            <span class="text-danger" asp-validation-for="RoleName"></span>
                        </div>
                        
                       
                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Register</button>
                    </form>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <hr class="my-4" />
                    <p class="text-center">
                        Already have an account?
                        <a asp-page="/Login" class="text-decoration-none text-primary fw-semibold">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>




