@model Instructors.ViewModel.DepartmentCreateViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="flex-row">
<div style="width:50%;">
    <h4>DepartmentCreateViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Manager)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Manager)
        </dd>
    </dl>
</div>
    <div style="width:30%;">
        <h6 class="display-3 fw-bolder mb-5"><span class="text-gradient d-inline">Courses in this Department</span></h6>
        @foreach(var crs in Model.Courses)
        {
            <a asp-controller="Course" asp-action="ShowCourseResult" asp-route-id="@crs.Id" id="@crs.Id" class="btn btn-success">@crs.Name</a>
            <br />

            <br />
        
            

        }
</div>
</div>


