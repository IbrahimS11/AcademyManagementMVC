@model DepartmentCreateViewModel


<div class="p-3 rounded" style="background-color: #3eacf0; border: 1px solid green; padding-bottom:5px;">
    <form id="myForm" class="d-flex align-items-center gap-4 flex-wrap">

       
        <div class="d-flex align-items-center">
            <label asp-for="Name" class="form-label me-2 fw-semibold">Department:</label>
            <input asp-for="Name" id="DeptName" class="form-control"
                   placeholder="Enter Dept Name" style="width: 180px;" />
        </div>

        
        <div class="d-flex align-items-center">
            <label asp-for="Manager" class="form-label me-2 fw-semibold">Manager:</label>
            <input asp-for="Manager" id="Mgr" class="form-control"
                   placeholder="Enter Manager Name" style="width: 180px;" />
        </div>

        <button type="button" class="btn btn-success fw-semibold" onclick="addDept()">
            Add Department
        </button>

        <div id="summaryError" asp-validation-summary="All" class="text-danger ms-3"></div>
    </form>
</div>
